		<%
		PainelDao objPaiDao = new PainelDao();
		List<Painel> ls = objPaiDao.listarRegistrosPainel();

		if (ls.size() > 0) {
			for (Painel painel : ls) {
		%>

		<tr
			onclick="window.location.href = 'formGerenciaPainel.jsp?id=<%=painel.getId()%>'" >
